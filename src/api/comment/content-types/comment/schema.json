{
  "kind": "collectionType",
  "collectionName": "comments",
  "info": {
    "singularName": "comment",
    "pluralName": "comments",
    "displayName": "comments",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "blog": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::blog.blog",
      "inversedBy": "comments"
    },
    "content": {
      "type": "text",
      "required": true,
      "maxLength": 1000
    },
    "comment_status": {
      "type": "enumeration",
      "enum": [
        "under review",
        "approved",
        "flagged",
        "spam",
        "deleted"
      ]
    },
    "website_user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::website-user.website-user",
      "inversedBy": "comments"
    }
  }
}
