{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "singularName": "author",
    "pluralName": "authors",
    "displayName": "Author",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "first_name": {
      "type": "string",
      "required": true,
      "maxLength": 70
    },
    "last_name": {
      "type": "string",
      "required": true,
      "maxLength": 70
    },
    "email": {
      "type": "email",
      "required": true,
      "maxLength": 100
    },
    "blogs": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::blog.blog",
      "mappedBy": "author"
    },
    "Password": {
      "type": "password",
      "required": false,
      "minLength": 5
    },
    "country": {
      "type": "string"
    },
    "blocks": {
      "type": "richtext"
    },
    "author_status": {
      "type": "integer",
      "default": 1
    },
    "username": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 50
    }
  }
}
